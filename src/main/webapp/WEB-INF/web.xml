<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>server.properties</param-name>
        <param-value>${catalina.base}/etc/server.properties</param-value>
    </context-param>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/cursus</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/forum</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>UserIdServlet</servlet-name>
        <servlet-class>web.UserIdServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GoogleAuthServlet</servlet-name>
        <servlet-class>web.GoogleAuthServlet</servlet-class>
        <init-param>
            <param-name>login-path</param-name>
            <param-value>/login</param-value>
        </init-param>
        <init-param>
            <param-name>callback-path</param-name>
            <param-value>/callback</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Paypal servlet</servlet-name>
        <servlet-class>paypal.expresscheckout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.jsf</url-pattern>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserIdServlet</servlet-name>
        <url-pattern>/userid</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GoogleAuthServlet</servlet-name>
        <url-pattern>/login</url-pattern>
        <url-pattern>/callback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Paypal servlet</servlet-name>
        <url-pattern>/payment/pay</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsf</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/error/401.xhtml</location>
    </error-page>
</web-app>
