<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="cursus2PU" transaction-type="JTA">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
	<jta-data-source>java:/comp/env/jdbc/cursus</jta-data-source>
    <class>db.entity.Courses</class>
    <class>db.entity.Comments</class>
    <class>db.entity.Posts</class>
    <class>db.entity.CoursesStudents</class>
    <class>db.entity.Users</class>
    <class>db.entity.Topics</class>
    <class>db.entity.Invites</class>
    <class>db.entity.Disciplines</class>
    <class>db.entity.CourseTopics</class>
    <class>db.entity.ForumTopics</class>
    <class>db.entity.InitiativeTopics</class>
    <class>db.entity.MediatekTopics</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
		<property name="javax.persistence.jtaDataSource" value="java:/comp/env/jdbc/cursus"/>
	</properties>
  </persistence-unit>
</persistence>
